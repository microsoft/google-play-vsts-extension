{
    "id": "8cf7cac0-620b-11e5-b4cf-8565e60f4d27",
    "name": "GooglePlay2",
    "friendlyName": "Google Play",
    "description": "Publish an APK to the Google Play store",
    "author": "Jonathan Carter",
    "helpMarkDown": "Replace with markdown to show in help",
    "category": "Deploy",
    "visibility": [
        "Build",
        "Release"
    ],
    "demands": [
        "npm"
    ],
    "version": {
        "Major": "0",
        "Minor": "1",
        "Patch": "3"
    },
    "minimumAgentVersion": "1.83.0",
    "instanceNameFormat": "Deploy $(apkFile) to the Google Play store",
     "groups": [
        {
            "name":"contactInfo",
            "displayName": "Update Contact Information",
            "isExpanded": false
        }
    ],
    "inputs": [
        {
            "name": "serviceAccountKey",
            "type": "filePath",
            "label": "Service Account Key",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "The JSON file provided by Google Play that included the service account's identify you wish to publish your APK under."
        },
        {
            "name": "apkFile",
            "type": "filePath",
            "label": "APK File",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "The updated APK you wish to publish to the specified track."
        },
        {
            "name": "track",
            "type": "pickList",
            "label": "Track",
            "defaultValue": "alpha",
            "required": true,
            "helpMarkDown": "The track you wish to publish the APK to.",
            "options": {
                "alpha": "Alpha",
                "beta": "Beta",
                "production": "Production",
                "rollout": "Rollout"
            }
        },
        {
            "name": "userFraction",
            "type": "string",
            "label": "Rollout Fraction",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "If publishing to the \"rollout\" track, this specifies the percentage of users to roll out your APK to."
        },
        {
            "name": "changeLogFile",
            "type": "filePath",
            "label": "Release Notes (File)",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "A file specifying the changes included in this APK update."
        },
        {
            "name": "updateContactInfo",
            "type": "boolean",
            "label": "Update Contact Info?",
            "defaultValue": false,
            "required": false,
            "helpMarkDown": "Indicates if the update to the app should include an update to the contact information",
            "groupName": "contactInfo"
        },
        {
            "name": "contactEmail",
            "type": "string",
            "label": "Email",
            "defaultValue": "",
            "required": false,
            "groupName": "contactInfo"
        },
        {
            "name": "contactPhone",
